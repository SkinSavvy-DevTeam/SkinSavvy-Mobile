<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="28dp"
    android:layout_marginStart="28dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_carousel_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:shapeAppearanceOverlay="@style/RoundedCornerImageView"
            tools:srcCompat="@drawable/image_sample"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_item_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/iv_carousel_image"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/iv_carousel_image"
            card_view:layout_constraintTop_toTopOf="@id/iv_carousel_image"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            card_view:layout_constraintEnd_toEndOf="@id/tv_item_category"
            card_view:layout_constraintStart_toStartOf="@id/tv_item_category"
            card_view:layout_constraintTop_toBottomOf="@id/tv_item_category"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            card_view:layout_constraintEnd_toEndOf="@id/tv_item_name"
            card_view:layout_constraintStart_toStartOf="@id/tv_item_name"
            card_view:layout_constraintTop_toBottomOf="@id/tv_item_name"
            tools:text="@string/app_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>